<body>
    @Html.Partial("Parts/_Header")
    <div id="main" class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                @Html.Partial("Parts/_Sidebar")
            </div>
        </div>
    </div>
    @Html.Partial("Parts/_Footer")
    <script src="~/content/libs/jquery/jquery-2.0.3.min.js"></script>
    <script src="~/content/libs/bootstrap/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
