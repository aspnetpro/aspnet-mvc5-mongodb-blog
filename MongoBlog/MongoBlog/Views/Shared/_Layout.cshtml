<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Simple Blog</title>
    <meta charset="utf-8" />
    <meta name="author" content="" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" />
    <link href="~/content/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="~/content/libs/bootstrap/themes/bootstrap.readable.min.css" rel="stylesheet" media="screen" />
    <link href="~/content/css/custom.css" rel="stylesheet" media="screen" />
    <link href="~/content/libs/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    @RenderSection("css", false)

    <!--[if IE 7]>
        <link rel="stylesheet" href="~/content/libs/font-awesome/css/font-awesome-ie7.min.css">
